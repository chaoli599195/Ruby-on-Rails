
<%= form_tag posts_path, :method => 'get' do %>
    <p>
      <%= radio_button_tag :type, "user", params[:type] = 'user', :id => "user" %>User
      <%= radio_button_tag :type, "content", params[:type] = 'content', :id => "content" %>Content
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>PosterName</th>
    <th>Votes</th>
    <th>Weight</th>
    <th>Postuserid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.posterName%></td>
    <td><%= post.votes %></td>
    <td><%= post.weight %></td>
    <td><%= post.postUserID %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path%>
<%= link_to 'Admin See Infos here', admins_path%>
<%= link_to 'Log out',{ :controller =>"sessions",  :action => "destroy" },:method => :delete %>


